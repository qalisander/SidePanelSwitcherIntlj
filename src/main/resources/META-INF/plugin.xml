<idea-plugin>
    <id>SidePanelSwitcher</id>
    <name>Switch Auto Hide Mode by Shortcut</name>
    <vendor email="qalisander@gmail.com" url="https://github.com/qalisander/SidePanelSwitcherIntlj">Alisander Qoshqosh</vendor>
    <description><![CDATA[Switch tool windows auto hide mode of left/right/bottom/top tool window groups by shortcut
    <p>
    This is a fork of the https://github.com/dmoebius/intellij-tool-windows-actions
    </p>]]></description>
    <version>1.0.2</version>
    <idea-version since-build="191" until-build="221.*"/>
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>
    <actions>
        <action id="ToolWindowsActions.HideBottomToolWindows"
                class="de.dmoebius.intellij.actions.HideBottomToolWindows"
                text="Hide Bottom Tool Windows"
                description="Hides all bottom tool windows">
            <add-to-group group-id="WindowMenu" anchor="after" relative-to-action="ToolWindowsGroup"/>
            <keyboard-shortcut first-keystroke="control Q" keymap="$default"/>
        </action>
    </actions>
</idea-plugin>